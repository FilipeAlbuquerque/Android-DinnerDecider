<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodTxt"
            app:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imagem_logo" app:layout_constraintHorizontal_bias="0.496"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imagem_logo"
            android:contentDescription="@string/imagem_logo"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.509"/>
    <Button
            android:text="@string/decide"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:id="@+id/decide_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="18sp" android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:hint="@string/add_new_food"
            android:autofillHints="" tools:targetApi="o"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodTxt"/>
    <Button
            android:text="@string/add_food"
            android:layout_width="209dp"
            android:layout_height="36dp"
            android:id="@+id/addFoodButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodTxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/decide_button" app:layout_constraintVertical_bias="0.079"/>
</androidx.constraintlayout.widget.ConstraintLayout>